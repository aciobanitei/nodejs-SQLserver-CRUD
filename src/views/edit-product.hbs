<div class="container">
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <h3 class="mt-2">Editar Producto</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <form action="/update/{{product.id}}" method="POST">
                                <div class="form-group">
                                    <input type="text" name="brand" class="form-control" placeholder="Marca" value="{{product.brand}}">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="model" class="form-control" placeholder="Modelo" value="{{product.model}}">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="category" class="form-control" placeholder="Categoria" value="{{product.category}}">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="price" class="form-control" placeholder="Precio" value="{{product.price}}">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block">
                                        Agregar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>